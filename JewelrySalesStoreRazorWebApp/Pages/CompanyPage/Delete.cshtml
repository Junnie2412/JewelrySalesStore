@page
@model JewelrySalesStoreRazorWebApp.Pages.CompanyPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Company?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyPhone)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyAddress)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyDescription)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Website)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.FoundationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.FoundationDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.IsActive)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Notes)
        </dd>
    </dl>

    <form method="post" id="deleteForm">
        <input type="hidden" asp-for="Company.CompanyId" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete('@Model.Company.CompanyId')">Delete</button> |
        <a style="text-decoration: none;" class="btn btn-secondary text-white" asp-page="./Index">Back</a>
    </form>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Company?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteConfirmButton">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(companyId) {
            $('#deleteConfirmationModal').modal('show');

            $('#deleteConfirmButton').off().on('click', function () {
                $('#deleteForm input[name="Company.CompanyId"]').val(companyId);
                $('#deleteForm').submit();
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const foundationDateInput = document.querySelector('input[name="Company.FoundationDate"]');
            foundationDateInput.addEventListener('change', function () {
                const foundationDate = new Date(foundationDateInput.value);
                const today = new Date();

                if (foundationDate > today) {
                    alert('Foundation Date cannot be in the future.');
                    foundationDateInput.value = '';
                }
            });
        });
    </script>
}