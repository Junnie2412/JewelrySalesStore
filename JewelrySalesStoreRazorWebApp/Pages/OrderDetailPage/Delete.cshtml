@page
@model JewelrySalesStoreRazorWebApp.Pages.OrderDetailPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>OrderDetail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.OrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.OrderId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.ProductId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.Quantity)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.UnitPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.UnitPrice)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.TotalPrice)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.DiscountPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.DiscountPrice)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.FinalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.FinalPrice)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.IsActive)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.Notes)
        </dd>
    </dl>

    <form method="post" id="deleteForm">
        <input type="hidden" asp-for="OrderDetail.OrderDetailId" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete('@Model.OrderDetail.OrderDetailId')">Delete</button> |
        <a style="text-decoration: none;" class="btn btn-secondary text-white" asp-page="./Index">Back</a>
    </form>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this OrderDetail?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteConfirmButton">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(orderDetailId) {
            $('#deleteConfirmationModal').modal('show');

            $('#deleteConfirmButton').off().on('click', function () {
                $('#deleteForm input[name="OrderDetail.OrderDetailId"]').val(orderDetailId);
                $('#deleteForm').submit();
            });
        }
    </script>
}
