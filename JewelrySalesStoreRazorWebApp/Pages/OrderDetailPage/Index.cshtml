@page
@model JewelrySalesStoreRazorWebApp.Pages.OrderDetailPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="get">
    <div class="form-group">
        <input type="text" name="CurrentFilter" placeholder="Search..." value="@Model.CurrentFilter">
        <button type="submit" class="btn btn-primary">Search</button> ||
        <a asp-page="./Index">Back to full List</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Order ID</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Product ID</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Quantity</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Unit Price</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Total Price</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Discount Price</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Final Price</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Is Active</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort" asp-route-page="1">Notes</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetail)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.OrderDetailId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.OrderDetailId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.OrderDetailId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-page="./Index" asp-route-page="1" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort">First</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-page="./Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-page="./Index" asp-route-page="@i" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-page="./Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-page="./Index" asp-route-page="@Model.TotalPages" asp-route-currentFilter="@Model.CurrentFilter" asp-route-currentSort="@Model.CurrentSort">Last</a>
            </li>
        }
    </ul>
    <p>Page @(Model.CurrentPage) of @Model.TotalPages</p>
</nav>

