@page
@model JewelrySalesStoreRazorWebApp.Pages.ProductPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data" class="d-flex">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductId" />
            <input type="hidden" asp-for="HasImage" />
            <div class="form-group col-md-3">
                @if (Model.Product.Image != null && Model.Product.Image.Length > 0)
                {
                    <div class="mt-2">
                        <img src="data:image;base64,@Convert.ToBase64String(Model.Product.Image)" alt="Current Image" class="img-thumbnail" />
                    </div>
                    <div class="form-check mt-2">
                        <input class="form-check-input" asp-for="RemoveImage" type="checkbox" />
                        <label class="form-check-label" asp-for="RemoveImage">Remove current image</label>
                    </div>
                }
            </div>
            <div class="form-group col-md-8 d-flex" style="justify-content: space-around">
                <div class="form-group col-md-5">
                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Name" class="control-label"></label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Color" class="control-label"></label>
                        <input asp-for="Product.Color" class="form-control" />
                        <span asp-validation-for="Product.Color" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.Weight" class="control-label"></label>
                        <input asp-for="Product.Weight" class="form-control" />
                        <span asp-validation-for="Product.Weight" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Price" class="control-label"></label>
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-5">
                    <div class="form-group">
                        <label asp-for="Product.CategoryId" class="control-label"></label>
                        <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.PromotionId" class="control-label"></label>
                        <select asp-for="Product.PromotionId" class="form-control" asp-items="ViewBag.PromotionId"></select>
                        <span asp-validation-for="Product.PromotionId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.IsActive" class="control-label"></label>
                        <input asp-for="Product.IsActive" class="form-control" />
                        <span asp-validation-for="Product.IsActive" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Notes" class="control-label"></label>
                        <input asp-for="Product.Notes" class="form-control" />
                        <span asp-validation-for="Product.Notes" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4" style="text-align: right">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a style="text-decoration: none;" class="btn btn-secondary text-white" asp-page="./Index">Back</a>
                    </div>
                </div>
            </div>
            <br />
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
