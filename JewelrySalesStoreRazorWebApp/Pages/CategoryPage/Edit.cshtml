@page
@model JewelrySalesStoreRazorWebApp.Pages.CategoryPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.CategoryId" />
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Material" class="control-label"></label>
                <input asp-for="Category.Material" class="form-control" />
                <span asp-validation-for="Category.Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.ProductLine" class="control-label"></label>
                <input asp-for="Category.ProductLine" class="form-control" />
                <span asp-validation-for="Category.ProductLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Collection" class="control-label"></label>
                <input asp-for="Category.Collection" class="form-control" />
                <span asp-validation-for="Category.Collection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.FengShui" class="control-label"></label>
                <input asp-for="Category.FengShui" class="form-control" />
                <span asp-validation-for="Category.FengShui" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Purpose" class="control-label"></label>
                <input asp-for="Category.Purpose" class="form-control" />
                <span asp-validation-for="Category.Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Gender" class="control-label"></label>
                <select id="CategoryGender" class="form-control" asp-for="Category.Gender">
                    <option value="true">Nam</option>
                    <option value="false">Nữ</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Category.IsActive" class="control-label"></label>
                <select id="CategoryIsActive" class="form-control" asp-for="Category.IsActive">
                    <option value="true">Đã Có</option>
                    <option value="false">Chưa Có</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Category.Notes" class="control-label"></label>
                <input asp-for="Category.Notes" class="form-control" />
                <span asp-validation-for="Category.Notes" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-success" />
                <a style="text-decoration: none;" class="btn btn-secondary text-white" asp-page="./Index">Back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
