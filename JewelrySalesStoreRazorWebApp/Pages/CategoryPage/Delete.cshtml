@page
@model JewelrySalesStoreRazorWebApp.Pages.CategoryPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Material)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Material)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.ProductLine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.ProductLine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Collection)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Collection)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.FengShui)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.FengShui)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Purpose)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Purpose)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Gender)
        </dt>
        <dd class="col-sm-10">
            @((Model.Category.Gender ?? false) ? "Nam" : "Nữ")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.IsActive)
        </dt>
        <dd class="col-sm-10">
            @((Model.Category.IsActive ?? false) ? "Đã Có" : "Chưa Có")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Notes)
        </dd>
    </dl>
    
    <form method="post" id="deleteForm">
        <input type="hidden" asp-for="Category.CategoryId" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete('@Model.Category.CategoryId')">Delete</button> |
        <a style="text-decoration: none;" class="btn btn-secondary text-white" asp-page="./Index">Back</a>
    </form>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Category?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteConfirmButton">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(categoryId) {
            $('#deleteConfirmationModal').modal('show');

            $('#deleteConfirmButton').off().on('click', function () {
                $('#deleteForm input[name="Category.CategoryId"]').val(categoryId);
                $('#deleteForm').submit();
            });
        }
    </script>
}