@page
@model JewelrySalesStoreRazorWebApp.Pages.PromotionPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Promotion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Promotion.PromotionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Promotion.PromotionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Promotion.PromotionCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Promotion.PromotionCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Promotion.DiscountPercentage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Promotion.DiscountPercentage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Promotion.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Promotion.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Promotion.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Promotion.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Promotion.Condition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Promotion.Condition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Promotion.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Promotion.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Promotion.IsActive)
        </dt>
        <dd class="col-sm-10">
            @((Model.Promotion.IsActive ?? false) ? "On" : "Off")
        </dd>
        <dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Promotion.Notes)
        </dt>
        <dd class="col-sm-10">
			@Html.DisplayFor(model => model.Promotion.Notes)    
        </dd>
    </dl>

    <form method="post" id="deleteForm">
        <input type="hidden" asp-for="Promotion.PromotionId" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete('@Model.Promotion.PromotionId')">Delete</button> |
        <a style="text-decoration: none;" class="btn btn-secondary text-white" asp-page="./Index">Back</a>
    </form>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Promotion?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteConfirmButton">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(promotionId) {
            $('#deleteConfirmationModal').modal('show');

            $('#deleteConfirmButton').off().on('click', function () {
                $('#deleteForm input[name="Promotion.PromotionId"]').val(promotionId);
                $('#deleteForm').submit();
            });
        }
    </script>
}
