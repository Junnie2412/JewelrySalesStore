@page
@model JewelrySalesStoreRazorWebApp.Pages.OrderPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Date)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.TotalPrice)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CompanyId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CompanyId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Status)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.PaymentMethod)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.ShippingMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShippingMethod)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerAddress)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerBankAccount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerBankAccount)
        </dd>
    </dl>

    <form method="post" id="deleteForm">
        <input type="hidden" asp-for="Order.OrderId" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete('@Model.Order.OrderId')">Delete</button> |
        <a style="text-decoration: none;" class="btn btn-secondary text-white" asp-page="./Index">Back</a>
    </form>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Order?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteConfirmButton">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(orderId) {
            $('#deleteConfirmationModal').modal('show');

            $('#deleteConfirmButton').off().on('click', function () {
                $('#deleteForm input[name="Order.OrderId"]').val(orderId);
                $('#deleteForm').submit();
            });
        }
    </script>
}
